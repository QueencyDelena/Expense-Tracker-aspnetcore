@model Expense_Tracker_aspnetcore.Models.Transaction

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Create Transaction</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="container" id="create-transaction-form">
        <form asp-action="Create" id="id-of-the-form">
            <div class="form-group">
                <div class="d-flex flex-column">
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        @foreach (var x in ViewBag.TransactionType)
                        {
                            if (x.Selected)
                            {
                                <label class="btn btn-outline-primary active">
                                    <input type="radio" asp-for="TransactionType" value=@x.Value checked> @x.Value
                                </label>
                            }
                            else
                            {
                                <label class="btn btn-outline-primary">
                                    <input type="radio" asp-for="TransactionType" value=@x.Value> @x.Value
                                </label>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" value="0" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDate" class="control-label"></label>
                @*<input asp-for="PostDate" class="form-control" value=@DateTime.Now.ToString("MMM dd, yyyy") type="text" id="datepicker">*@
                <input asp-for="PostDate" class="form-control" value=@DateTime.Now.ToString("yyyy-MM-ddThh:mm") />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountID" class="control-label"></label>
                <select asp-for="AccountID" class="form-control" asp-items="ViewBag.Account"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Category"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    $(".transaction-type-select option").on("click", function () {
        $(".transaction-type-select option").find(".selected").removeClass("selected");
        $(this).addClass("selected");
    });
</script>
